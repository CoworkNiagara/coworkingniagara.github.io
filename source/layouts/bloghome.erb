<% wrap_layout :blog do %>
  <div class="header">
    <div class="section">
      <div class="w">
        <div class="logo">
          <%= link_to %{<img src="/images/logo-horizontal.svg">}, "/" %>
        </div>

        <div class="mobile-toggle">
          &#9776;
        </div>
      </div>

      <div class="navigation">
        <%= partial "navigation.html" %>
      </div>
    </div>
  </div>

  <header class="blog home">
    <div class="wrapper">
    <h1><%= current_page.data.title %></h1>
    </div>
  </header>
  <section class="content main">
     <%= yield %>
  </section>

  <%= partial "footer.html" %>
<% end %>
